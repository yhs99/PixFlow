              socket.team = selectedTeam;
              socket.emit('select-seat', {
                team: selectedTeam,
                index
              });
            });
          }
        }
        container.appendChild(seat);
      });
    }

    // ë¦¬ë¡¤ ì—…ë°ì´íŠ¸
    socket.on('reroll-update', (count) => {
